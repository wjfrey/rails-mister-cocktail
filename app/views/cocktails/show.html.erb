<% if @cocktail.photo.attached? %>
  <%= cl_image_tag @cocktail.photo.key, alt: "alttext" %>
<% end %>
<h2><%= @cocktail.name %></h2>

<div>
  <h4>Ingredients:</h4>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.ingredient.name %>:
        <%= dose.description %>
        <%= link_to 'x', cocktail_dose_path(@cocktail, dose), method: :delete  %>
      </li>
    <% end %>

    <li>Add a new dose</li>
    <div>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <%= f.submit "Create Dose" %>
      <% end %>
    </div>
  </ul>
</div>
